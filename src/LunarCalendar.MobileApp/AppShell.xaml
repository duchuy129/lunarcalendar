<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LunarCalendar.MobileApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:LunarCalendar.MobileApp.Views"
    xmlns:ext="clr-namespace:LunarCalendar.MobileApp.Extensions"
    Shell.FlyoutBehavior="Flyout"
    Title="{ext:Translate AppName}">

    <FlyoutItem Title="{ext:Translate Calendar}" Icon="calendar.png">
        <ShellContent
            Title="{ext:Translate Calendar}"
            ContentTemplate="{DataTemplate views:CalendarPage}"
            Route="calendar" />
    </FlyoutItem>

    <FlyoutItem Title="{ext:Translate Settings}" Icon="settings.png">
        <ShellContent
            Title="{ext:Translate Settings}"
            ContentTemplate="{DataTemplate views:SettingsPage}"
            Route="settings" />
    </FlyoutItem>

</Shell>
