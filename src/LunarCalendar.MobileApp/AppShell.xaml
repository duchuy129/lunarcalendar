<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LunarCalendar.MobileApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:LunarCalendar.MobileApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarIsVisible="True">

    <TabBar>
        <ShellContent
            Title="Calendar"
            Icon="calendar.png"
            Route="calendar">
            <ContentPage BackgroundColor="White">
                <VerticalStackLayout Padding="20" Spacing="10" VerticalOptions="Center">
                    <Label Text="Calendar"
                           FontSize="32"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="Black"/>
                    <Label Text="Vietnamese Lunar Calendar"
                           FontSize="18"
                           HorizontalOptions="Center"
                           TextColor="Gray"/>
                    <Label Text="The app is working! CalendarPage will be added back once we fix the rendering issue."
                           FontSize="14"
                           HorizontalOptions="Center"
                           TextColor="Gray"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </ContentPage>
        </ShellContent>

        <ShellContent
            Title="Settings"
            Icon="settings.png"
            Route="settings"
            ContentTemplate="{DataTemplate views:SettingsPage}" />
    </TabBar>

</Shell>
