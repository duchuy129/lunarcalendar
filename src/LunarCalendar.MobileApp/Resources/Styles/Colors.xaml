<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <!-- Modern Ocean Gradient Theme - 2025 Trending Colors -->

    <!-- Primary Colors - Ocean Blue Gradient -->
    <Color x:Key="Primary">#0077B6</Color>
    <Color x:Key="PrimaryLight">#00B4D8</Color>
    <Color x:Key="PrimaryDark">#023E8A</Color>
    <Color x:Key="PrimaryDarkText">#E8F4F8</Color>

    <!-- Secondary Colors - Coral Accents -->
    <Color x:Key="Secondary">#FF6B6B</Color>
    <Color x:Key="SecondaryLight">#FFE5E5</Color>
    <Color x:Key="SecondaryDarkText">#FF8E8E</Color>

    <!-- Tertiary Colors - Complementary Teal -->
    <Color x:Key="Tertiary">#00B4D8</Color>
    <Color x:Key="TertiaryDark">#0096C7</Color>

    <!-- Base Colors -->
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Magenta">#FF6B6B</Color>
    <Color x:Key="MidnightBlue">#023E8A</Color>
    <Color x:Key="OffBlack">#1A1A2E</Color>

    <!-- Modern Neutral Palette -->
    <Color x:Key="Gray100">#F8F9FA</Color>
    <Color x:Key="Gray200">#E9ECEF</Color>
    <Color x:Key="Gray300">#DEE2E6</Color>
    <Color x:Key="Gray400">#CED4DA</Color>
    <Color x:Key="Gray500">#ADB5BD</Color>
    <Color x:Key="Gray600">#6C757D</Color>
    <Color x:Key="Gray900">#212529</Color>
    <Color x:Key="Gray950">#0D1117</Color>

    <!-- Accent Colors for Lunar Elements -->
    <Color x:Key="LunarRed">#EF476F</Color>
    <Color x:Key="LunarGold">#FFD60A</Color>
    <Color x:Key="TodayGreen">#06D6A0</Color>

    <!-- Background Gradients -->
    <Color x:Key="BackgroundLight">#FFFFFF</Color>
    <Color x:Key="BackgroundLightGradient">#F0F9FF</Color>
    <Color x:Key="BackgroundDark">#0D1117</Color>

    <!-- Solid Color Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>

    <!-- Modern Gradient Brushes -->
    <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource PrimaryLight}" Offset="0.0"/>
        <GradientStop Color="{StaticResource Primary}" Offset="1.0"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="PrimaryGradientVertical" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource PrimaryLight}" Offset="0.0"/>
        <GradientStop Color="{StaticResource Primary}" Offset="1.0"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource BackgroundLight}" Offset="0.0"/>
        <GradientStop Color="{StaticResource BackgroundLightGradient}" Offset="1.0"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFFFFF" Offset="0.0"/>
        <GradientStop Color="#F8FBFF" Offset="1.0"/>
    </LinearGradientBrush>
</ResourceDictionary>