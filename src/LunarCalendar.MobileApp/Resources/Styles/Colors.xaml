<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <!-- Modern Ocean Gradient Theme - Refined 2025 Colors -->
    <!-- UPDATED: Softer, more sophisticated palette for better eye comfort -->

    <!-- Primary Colors - Warm Maroon/Brown to match lunar background -->
    <Color x:Key="Primary">#A0522D</Color><!-- Sienna brown -->
    <Color x:Key="PrimaryLight">#CD853F</Color><!-- Peru (light brown) -->
    <Color x:Key="PrimaryDark">#8B4513</Color><!-- Saddle brown -->
    <Color x:Key="PrimaryDarkText">#FFF8DC</Color>
    <Color x:Key="PrimarySoft">#FAEBD7</Color><!-- Antique white -->

    <!-- Secondary Colors - Coral Accents -->
    <Color x:Key="Secondary">#FF6B6B</Color>
    <Color x:Key="SecondaryLight">#FFE5E5</Color>
    <Color x:Key="SecondaryDarkText">#FF8E8E</Color>

    <!-- Tertiary Colors - Complementary Teal -->
    <Color x:Key="Tertiary">#00B4D8</Color>
    <Color x:Key="TertiaryDark">#0096C7</Color>

    <!-- Base Colors -->
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Magenta">#FF6B6B</Color>
    <Color x:Key="MidnightBlue">#023E8A</Color>
    <Color x:Key="OffBlack">#1A1A2E</Color>

    <!-- Modern Neutral Palette -->
    <Color x:Key="Gray100">#F8F9FA</Color>
    <Color x:Key="Gray200">#E9ECEF</Color>
    <Color x:Key="Gray300">#DEE2E6</Color>
    <Color x:Key="Gray400">#CED4DA</Color>
    <Color x:Key="Gray500">#ADB5BD</Color>
    <Color x:Key="Gray600">#6C757D</Color>
    <Color x:Key="Gray900">#212529</Color>
    <Color x:Key="Gray950">#0D1117</Color>

    <!-- Accent Colors for Lunar Elements -->
    <Color x:Key="LunarRed">#DC5A7A</Color><!-- Softer red for better readability -->
    <Color x:Key="LunarGold">#F5C842</Color><!-- Less aggressive yellow -->
    <Color x:Key="TodayGreen">#FF8C42</Color><!-- Warm orange instead of green -->
    <Color x:Key="TodayOrange">#FF8C42</Color><!-- Today highlight - warm orange -->
    <Color x:Key="Danger">#DC3545</Color><!-- Red for destructive actions -->

    <!-- Background Gradients - Improved for eye comfort -->
    <Color x:Key="BackgroundLight">#FFFFFF</Color>
    <Color x:Key="BackgroundLightGradient">#F7FBFF</Color><!-- More subtle gradient -->
    <Color x:Key="BackgroundMedium">#F8FAFC</Color><!-- New: Alternative light background -->
    <Color x:Key="BackgroundDark">#0D1117</Color>

    <!-- Solid Color Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>

    <!-- Semi-Transparent Glass-Morphism Gradient Brushes -->
    <!-- Navigation and Header Gradients - Warm maroon/brown with transparency -->
    <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#CCCD853F" Offset="0.0"/><!-- 80% peru (light brown) -->
        <GradientStop Color="#CCA0522D" Offset="1.0"/><!-- 80% sienna -->
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="PrimaryGradientVertical" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#CCCD853F" Offset="0.0"/><!-- 80% peru (light brown) -->
        <GradientStop Color="#CCA0522D" Offset="1.0"/><!-- 80% sienna -->
    </LinearGradientBrush>

    <!-- Background - Very light, blends with lunar_bg -->
    <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#00FFFFFF" Offset="0.0"/><!-- Fully transparent -->
        <GradientStop Color="#00F7FBFF" Offset="1.0"/><!-- Fully transparent -->
    </LinearGradientBrush>

    <!-- Card Gradients - Semi-transparent frosted glass effect -->
    <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#E6FFFFFF" Offset="0.0"/><!-- 90% white -->
        <GradientStop Color="#E6FBFCFD" Offset="1.0"/><!-- 90% off-white -->
    </LinearGradientBrush>

    <!-- Subtle Card - More transparent for better blending -->
    <LinearGradientBrush x:Key="SubtleCardGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#CCFFFFFF" Offset="0.0"/><!-- 80% white -->
        <GradientStop Color="#CCF9FAFB" Offset="1.0"/><!-- 80% off-white -->
    </LinearGradientBrush>

    <!-- Calendar Cell Background - Very subtle -->
    <SolidColorBrush x:Key="CalendarCellBg" Color="#CCFAFBFC"/><!-- 80% opacity -->
</ResourceDictionary>