<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>LSRequiresIPhoneOS</key>
	<true/>
	<key>UIDeviceFamily</key>
	<array>
		<integer>1</integer>
		<integer>2</integer>
	</array>
	<key>UIRequiredDeviceCapabilities</key>
	<array>
		<string>arm64</string>
	</array>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>XSAppIconAssets</key>
	<string>Assets.xcassets/appicon.appiconset</string>
	<key>NSAppTransportSecurity</key>
	<dict>
		<!-- Allow localhost only for development -->
		<key>NSAllowsLocalNetworking</key>
		<true/>
		<!-- Exception for localhost development (HTTPS) -->
		<key>NSExceptionDomains</key>
		<dict>
			<key>localhost</key>
			<dict>
				<key>NSExceptionAllowsInsecureHTTPLoads</key>
				<false/>
				<key>NSIncludesSubdomains</key>
				<true/>
			</dict>
		</dict>
	</dict>
	<key>UILaunchStoryboardName</key>
	<string>MauiSplash</string>
	<key>UIViewControllerBasedStatusBarAppearance</key>
	<false/>
	<key>UIUserInterfaceStyle</key>
	<string>Light</string>

	<!-- Privacy purpose strings required by App Store even when APIs are not directly used.
	     These are referenced by MAUI framework internals or linked system libraries. -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>This app does not use your location.</string>
	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>This app does not use your location.</string>
	<key>NSBluetoothAlwaysUsageDescription</key>
	<string>This app does not use Bluetooth.</string>
	<key>NSCalendarsUsageDescription</key>
	<string>This app does not access your calendar.</string>
	<key>NSContactsUsageDescription</key>
	<string>This app does not access your contacts.</string>
	<key>NSSiriUsageDescription</key>
	<string>This app does not use Siri.</string>
	<key>NSAppleMusicUsageDescription</key>
	<string>This app does not access your music library.</string>
	<key>NSMicrophoneUsageDescription</key>
	<string>This app does not use the microphone.</string>
</dict>
</plist>
