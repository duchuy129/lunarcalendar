<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewmodels="clr-namespace:LunarCalendar.MobileApp.ViewModels"
             xmlns:converters="clr-namespace:LunarCalendar.MobileApp.Converters"
             x:Class="LunarCalendar.MobileApp.Views.CalendarPage"
             Title="{Binding Title}"
             BackgroundColor="#FFF9F0">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BoolToExpandIconConverter x:Key="BoolToExpandIconConverter"/>
            <converters:IntToBoolConverter x:Key="IntToBoolConverter"/>
            <converters:MonthIndexConverter x:Key="MonthIndexConverter"/>
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <RefreshView Grid.Row="0" Grid.RowSpan="8"
                 IsRefreshing="{Binding IsRefreshing}"
                 Command="{Binding RefreshCommand}"
                 RefreshColor="{DynamicResource Primary}">
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,*,Auto,Auto"
              BackgroundColor="#FFF9F0">

            <!-- Cultural Background Image -->
        <Image Grid.RowSpan="8"
               Source="cultural_background.png"
               Aspect="AspectFill"
               Opacity="0.15"
               IsVisible="{Binding ShowCulturalBackground}"/>

        <!-- Month Navigation Header -->
        <Grid Grid.Row="0"
              Padding="16,8"
              BackgroundColor="{DynamicResource Primary}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" Grid.Column="0"
                    Text="◀"
                    Command="{Binding PreviousMonthCommand}"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    FontSize="20"
                    WidthRequest="50"
                    SemanticProperties.Description="Previous month"
                    SemanticProperties.Hint="Navigate to the previous month in the calendar"/>

            <StackLayout Grid.Row="0" Grid.Column="1"
                        VerticalOptions="Center"
                        HorizontalOptions="Center">
                <Label Text="{Binding MonthYearDisplay}"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       SemanticProperties.Description="Current month and year"/>

                <!-- Online/Offline Status -->
                <Label Text="{Binding SyncStatus}"
                       FontSize="10"
                       TextColor="White"
                       Opacity="0.8"
                       HorizontalOptions="Center"
                       IsVisible="{Binding SyncStatus, Converter={StaticResource IntToBoolConverter}}"
                       SemanticProperties.Description="Sync status"/>
            </StackLayout>

            <Button Grid.Row="0" Grid.Column="2"
                    Text="Today"
                    Command="{Binding TodayCommand}"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    FontSize="14"
                    Padding="8,0"
                    Margin="0,0,8,0"
                    SemanticProperties.Description="Go to today"
                    SemanticProperties.Hint="Navigate to the current month and highlight today's date"/>

            <Button Grid.Row="0" Grid.Column="3"
                    Text="▶"
                    Command="{Binding NextMonthCommand}"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    FontSize="20"
                    WidthRequest="50"
                    SemanticProperties.Description="Next month"
                    SemanticProperties.Hint="Navigate to the next month in the calendar"/>

            <!-- Sync Indicator -->
            <ActivityIndicator Grid.Row="1" Grid.ColumnSpan="4"
                             IsRunning="{Binding IsSyncing}"
                             IsVisible="{Binding IsSyncing}"
                             Color="White"
                             HeightRequest="20"
                             Margin="0,4,0,0"/>
        </Grid>

        <!-- Month/Year Picker -->
        <Grid Grid.Row="1"
              Padding="16,8"
              BackgroundColor="{DynamicResource Gray100}"
              ColumnDefinitions="Auto,*,Auto,Auto"
              ColumnSpacing="8">

            <Label Grid.Column="0"
                   Text="Jump to:"
                   FontSize="14"
                   TextColor="{DynamicResource Gray900}"
                   VerticalOptions="Center"
                   FontAttributes="Bold"/>

            <Picker Grid.Column="1"
                    ItemsSource="{Binding AvailableMonths}"
                    SelectedIndex="{Binding SelectedCalendarMonth, Converter={StaticResource MonthIndexConverter}}"
                    FontSize="14"
                    TextColor="{DynamicResource Gray900}"
                    VerticalOptions="Center"
                    SelectedIndexChanged="OnMonthPickerSelectedIndexChanged"/>

            <Picker Grid.Column="2"
                    ItemsSource="{Binding AvailableCalendarYears}"
                    SelectedItem="{Binding SelectedCalendarYear}"
                    FontSize="14"
                    TextColor="{DynamicResource Gray900}"
                    VerticalOptions="Center"
                    WidthRequest="90"
                    SelectedIndexChanged="OnYearPickerSelectedIndexChanged"/>

            <Button Grid.Column="3"
                    Text="Go"
                    Command="{Binding JumpToMonthCommand}"
                    BackgroundColor="{DynamicResource Primary}"
                    TextColor="White"
                    FontSize="14"
                    Padding="12,4"
                    CornerRadius="4"/>
        </Grid>

        <!-- Today's Date Display -->
        <Label Grid.Row="2"
               HorizontalOptions="Center"
               Padding="12,8"
               BackgroundColor="{DynamicResource Gray100}">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="{Binding TodayGregorianDisplay}"
                          FontSize="28"
                          FontAttributes="Bold"
                          TextColor="{DynamicResource Gray900}"/>
                    <Span Text=" "
                          FontSize="28"/>
                    <Span Text="{Binding TodayLunarDisplay}"
                          FontSize="28"
                          FontAttributes="Bold"
                          TextColor="Red"/>
                </FormattedString>
            </Label.FormattedText>
        </Label>

        <!-- Day of Week Header -->
        <Grid Grid.Row="3"
              Padding="4,8"
              BackgroundColor="{DynamicResource Gray100}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Text="Sun" HorizontalOptions="Center" FontSize="12" FontAttributes="Bold" TextColor="{DynamicResource Gray600}"/>
            <Label Grid.Column="1" Text="Mon" HorizontalOptions="Center" FontSize="12" FontAttributes="Bold" TextColor="{DynamicResource Gray600}"/>
            <Label Grid.Column="2" Text="Tue" HorizontalOptions="Center" FontSize="12" FontAttributes="Bold" TextColor="{DynamicResource Gray600}"/>
            <Label Grid.Column="3" Text="Wed" HorizontalOptions="Center" FontSize="12" FontAttributes="Bold" TextColor="{DynamicResource Gray600}"/>
            <Label Grid.Column="4" Text="Thu" HorizontalOptions="Center" FontSize="12" FontAttributes="Bold" TextColor="{DynamicResource Gray600}"/>
            <Label Grid.Column="5" Text="Fri" HorizontalOptions="Center" FontSize="12" FontAttributes="Bold" TextColor="{DynamicResource Gray600}"/>
            <Label Grid.Column="6" Text="Sat" HorizontalOptions="Center" FontSize="12" FontAttributes="Bold" TextColor="{DynamicResource Gray600}"/>
        </Grid>

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.Row="5"
                          IsVisible="{Binding IsBusy}"
                          IsRunning="{Binding IsBusy}"
                          Color="{DynamicResource Primary}"
                          VerticalOptions="Center"
                          HorizontalOptions="Center"/>

        <!-- Calendar Grid -->
        <CollectionView Grid.Row="5"
                       ItemsSource="{Binding CalendarDays}"
                       IsVisible="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}"
                       SelectionMode="None">
            <CollectionView.GestureRecognizers>
                <SwipeGestureRecognizer Direction="Left" Command="{Binding NextMonthCommand}"/>
                <SwipeGestureRecognizer Direction="Right" Command="{Binding PreviousMonthCommand}"/>
            </CollectionView.GestureRecognizers>
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical"
                               Span="7"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="4"
                           Margin="2"
                           Stroke="{Binding HolidayColor}"
                           StrokeThickness="2">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Border.Triggers>
                            <DataTrigger TargetType="Border"
                                       Binding="{Binding IsToday}"
                                       Value="True">
                                <Setter Property="BackgroundColor" Value="{DynamicResource Primary}"/>
                            </DataTrigger>
                        </Border.Triggers>

                        <VerticalStackLayout Spacing="2"
                                           Padding="4">
                            <!-- Gregorian Day -->
                            <Label Text="{Binding Day}"
                                  FontSize="16"
                                  FontAttributes="Bold"
                                  TextColor="{DynamicResource Gray900}"
                                  HorizontalOptions="Center">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label"
                                               Binding="{Binding IsCurrentMonth}"
                                               Value="False">
                                        <Setter Property="TextColor" Value="{DynamicResource Gray300}"/>
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label"
                                               Binding="{Binding IsToday}"
                                               Value="True">
                                        <Setter Property="TextColor" Value="White"/>
                                        <Setter Property="FontSize" Value="18"/>
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>

                            <!-- Lunar Day -->
                            <Label Text="{Binding LunarDateDisplay}"
                                  FontSize="10"
                                  TextColor="Red"
                                  HorizontalOptions="Center"
                                  LineBreakMode="NoWrap">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label"
                                               Binding="{Binding IsCurrentMonth}"
                                               Value="False">
                                        <Setter Property="TextColor" Value="{DynamicResource Gray300}"/>
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label"
                                               Binding="{Binding IsToday}"
                                               Value="True">
                                        <Setter Property="TextColor" Value="White"/>
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label"
                                               Binding="{Binding LunarDateDisplay}"
                                               Value="">
                                        <Setter Property="IsVisible" Value="False"/>
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>

                            <!-- Holiday Name (if exists) -->
                            <Label Text="{Binding Holiday.Name}"
                                  FontSize="8"
                                  FontAttributes="Bold"
                                  TextColor="{Binding HolidayColor}"
                                  HorizontalOptions="Center"
                                  LineBreakMode="WordWrap"
                                  MaxLines="2"
                                  IsVisible="{Binding HasHoliday}">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label"
                                               Binding="{Binding IsToday}"
                                               Value="True">
                                        <Setter Property="TextColor" Value="White"/>
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Year Holidays Section -->
        <VerticalStackLayout Grid.Row="6"
                            BackgroundColor="{DynamicResource Gray100}"
                            Padding="0">

            <!-- Section Header (Always visible - Toggle) -->
            <Grid Padding="16,12"
                  BackgroundColor="{DynamicResource Primary}">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ToggleYearSectionCommand}"/>
                </Grid.GestureRecognizers>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0"
                       Text="Vietnamese Holidays"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="White"
                       VerticalOptions="Center"/>

                <Label Grid.Column="1"
                       Text="{Binding IsYearSectionExpanded, Converter={StaticResource BoolToExpandIconConverter}}"
                       FontSize="18"
                       TextColor="White"
                       VerticalOptions="Center"/>
            </Grid>

            <!-- Year Navigation and List (Collapsible) -->
            <VerticalStackLayout IsVisible="{Binding IsYearSectionExpanded}"
                                Padding="16">

                <!-- Year Navigation -->
                <Grid ColumnDefinitions="Auto,*,Auto,Auto"
                      ColumnSpacing="8"
                      Margin="0,0,0,12">

                    <Button Grid.Column="0"
                            Text="◀"
                            Command="{Binding PreviousYearCommand}"
                            BackgroundColor="{DynamicResource Primary}"
                            TextColor="White"
                            FontSize="18"
                            WidthRequest="50"
                            HeightRequest="40"/>

                    <Picker Grid.Column="1"
                            ItemsSource="{Binding AvailableYears}"
                            SelectedItem="{Binding SelectedYear}"
                            SelectedIndexChanged="OnYearPickerSelectedIndexChanged"
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="{DynamicResource Primary}"
                            HorizontalOptions="Fill"
                            VerticalOptions="Center"/>

                    <Button Grid.Column="2"
                            Text="Today"
                            Command="{Binding CurrentYearCommand}"
                            BackgroundColor="{DynamicResource Primary}"
                            TextColor="White"
                            FontSize="14"
                            Padding="12,0"
                            HeightRequest="40"/>

                    <Button Grid.Column="3"
                            Text="▶"
                            Command="{Binding NextYearCommand}"
                            BackgroundColor="{DynamicResource Primary}"
                            TextColor="White"
                            FontSize="18"
                            WidthRequest="50"
                            HeightRequest="40"/>
                </Grid>

                <!-- Holidays List -->
                <CollectionView ItemsSource="{Binding YearHolidays}"
                               MaximumHeightRequest="400">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="12"
                                   Margin="0,4"
                                   BackgroundColor="White"
                                   Stroke="{Binding Holiday.ColorHex}"
                                   StrokeThickness="2">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8"/>
                                </Border.StrokeShape>
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:CalendarViewModel}}, Path=ViewHolidayDetailCommand}"
                                                         CommandParameter="{Binding .}"/>
                                </Border.GestureRecognizers>

                                <Grid ColumnDefinitions="Auto,*"
                                     ColumnSpacing="12">

                                    <!-- Date Box -->
                                    <VerticalStackLayout Grid.Column="0"
                                                        Padding="8"
                                                        BackgroundColor="{Binding Holiday.ColorHex}"
                                                        WidthRequest="70"
                                                        HorizontalOptions="Center">
                                        <Label Text="{Binding GregorianDate, StringFormat='{0:MMM}'}"
                                              FontSize="12"
                                              TextColor="White"
                                              HorizontalOptions="Center"/>
                                        <Label Text="{Binding GregorianDate, StringFormat='{0:dd}'}"
                                              FontSize="24"
                                              FontAttributes="Bold"
                                              TextColor="White"
                                              HorizontalOptions="Center"/>
                                        <Label Text="{Binding GregorianDate, StringFormat='{0:yyyy}'}"
                                              FontSize="10"
                                              TextColor="White"
                                              HorizontalOptions="Center"/>
                                    </VerticalStackLayout>

                                    <!-- Holiday Info -->
                                    <VerticalStackLayout Grid.Column="1"
                                                        Spacing="4"
                                                        VerticalOptions="Center">
                                        <Label Text="{Binding Holiday.Name}"
                                              FontSize="16"
                                              FontAttributes="Bold"
                                              TextColor="{DynamicResource Gray900}"/>

                                        <Label FontSize="12"
                                              TextColor="{DynamicResource Gray600}">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="Gregorian: "/>
                                                    <Span Text="{Binding GregorianDate, StringFormat='{0:MMMM dd, yyyy}'}"
                                                         FontAttributes="Bold"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>

                                        <!-- Lunar date display -->
                                        <Label FontSize="14"
                                              TextColor="#DC143C"
                                              FontAttributes="Bold"
                                              Margin="0,4,0,0"
                                              IsVisible="{Binding Holiday.HasLunarDate}">
                                            <Label.Text>
                                                <MultiBinding StringFormat="Lunar: {0}/{1}">
                                                    <Binding Path="Holiday.LunarDay"/>
                                                    <Binding Path="Holiday.LunarMonth"/>
                                                </MultiBinding>
                                            </Label.Text>
                                        </Label>

                                        <Label Text="{Binding Holiday.Description}"
                                              FontSize="11"
                                              TextColor="{DynamicResource Gray500}"
                                              LineBreakMode="WordWrap"/>
                                    </VerticalStackLayout>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </VerticalStackLayout>

        </Grid>
    </RefreshView>
</ContentPage>
