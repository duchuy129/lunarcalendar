<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewmodels="clr-namespace:LunarCalendar.MobileApp.ViewModels"
             xmlns:converters="clr-namespace:LunarCalendar.MobileApp.Converters"
             x:Class="LunarCalendar.MobileApp.Views.CalendarPage"
             Title="{Binding Title}"
             Background="{DynamicResource BackgroundGradient}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BoolToExpandIconConverter x:Key="BoolToExpandIconConverter"/>
            <converters:IntToBoolConverter x:Key="IntToBoolConverter"/>
            <converters:MonthIndexConverter x:Key="MonthIndexConverter"/>
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <RefreshView Grid.Row="0" Grid.RowSpan="9"
                 IsRefreshing="{Binding IsRefreshing}"
                 Command="{Binding RefreshCommand}"
                 RefreshColor="{DynamicResource Primary}">
        <ScrollView>
            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
                  BackgroundColor="Transparent">

            <!-- Cultural Background Image -->
        <Image Grid.RowSpan="9"
               Source="cultural_background.png"
               Aspect="AspectFill"
               Opacity="0.08"
               IsVisible="{Binding ShowCulturalBackground}"/>

        <!-- Month Navigation Header -->
        <Grid Grid.Row="0"
              Background="{DynamicResource PrimaryGradientVertical}">
            <Grid.Shadow>
                <Shadow Brush="{DynamicResource Primary}"
                        Opacity="0.3"
                        Radius="8"
                        Offset="0,2"/>
            </Grid.Shadow>
            <Grid.Padding>
                <OnPlatform x:TypeArguments="Thickness">
                    <On Platform="iOS" Value="8,0" />
                    <On Platform="Android" Value="8,2" />
                </OnPlatform>
            </Grid.Padding>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" Grid.Column="0"
                    Text="◀"
                    Command="{Binding PreviousMonthCommand}"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    FontSize="20"
                    WidthRequest="50"
                    SemanticProperties.Description="Previous month"
                    SemanticProperties.Hint="Navigate to the previous month in the calendar"/>

            <StackLayout Grid.Row="0" Grid.Column="1"
                        VerticalOptions="Center"
                        HorizontalOptions="Center">
                <Label Text="{Binding MonthYearDisplay}"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       SemanticProperties.Description="Current month and year"/>

                <!-- Online/Offline Status -->
                <Label Text="{Binding SyncStatus}"
                       FontSize="10"
                       TextColor="White"
                       Opacity="0.8"
                       HorizontalOptions="Center"
                       IsVisible="{Binding SyncStatus, Converter={StaticResource IntToBoolConverter}}"
                       SemanticProperties.Description="Sync status"/>
            </StackLayout>

            <Button Grid.Row="0" Grid.Column="2"
                    Text="Today"
                    Command="{Binding TodayCommand}"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    FontSize="14"
                    Padding="8,0"
                    Margin="0,0,8,0"
                    SemanticProperties.Description="Go to today"
                    SemanticProperties.Hint="Navigate to the current month and highlight today's date"/>

            <Button Grid.Row="0" Grid.Column="3"
                    Text="▶"
                    Command="{Binding NextMonthCommand}"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    FontSize="20"
                    WidthRequest="50"
                    SemanticProperties.Description="Next month"
                    SemanticProperties.Hint="Navigate to the next month in the calendar"/>

            <!-- Sync Indicator -->
            <ActivityIndicator Grid.Row="1" Grid.ColumnSpan="4"
                             IsRunning="{Binding IsSyncing}"
                             IsVisible="{Binding IsSyncing}"
                             Color="White"
                             HeightRequest="20"
                             Margin="0,4,0,0"/>
        </Grid>

        <!-- Month/Year Picker -->
        <Border Grid.Row="1"
                Margin="12,8"
                Padding="16,12"
                Background="{DynamicResource CardGradient}"
                StrokeThickness="0">
            <Border.Shadow>
                <Shadow Brush="Black"
                        Opacity="0.1"
                        Radius="12"
                        Offset="0,4"/>
            </Border.Shadow>
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16"/>
            </Border.StrokeShape>
        <Grid ColumnDefinitions="Auto,*,Auto,Auto"
              ColumnSpacing="8"
              MinimumHeightRequest="56">

            <Label Grid.Column="0"
                   Text="Month:"
                   FontSize="14"
                   TextColor="{DynamicResource Gray900}"
                   VerticalOptions="Center"
                   FontAttributes="Bold"/>

            <Picker Grid.Column="1"
                    ItemsSource="{Binding AvailableMonths}"
                    SelectedIndex="{Binding SelectedCalendarMonth, Converter={StaticResource MonthIndexConverter}}"
                    FontSize="14"
                    TextColor="{DynamicResource Gray900}"
                    VerticalOptions="Center"
                    Margin="0,2,0,2"
                    SelectedIndexChanged="OnMonthPickerSelectedIndexChanged"/>

            <Picker Grid.Column="2"
                    ItemsSource="{Binding AvailableCalendarYears}"
                    SelectedItem="{Binding SelectedCalendarYear}"
                    FontSize="14"
                    TextColor="{DynamicResource Gray900}"
                    VerticalOptions="Center"
                    WidthRequest="85"
                    Margin="0,2,0,2"
                    SelectedIndexChanged="OnYearPickerSelectedIndexChanged"/>

            <Button Grid.Column="3"
                    Text="Go"
                    Command="{Binding JumpToMonthCommand}"
                    BackgroundColor="{DynamicResource Primary}"
                    TextColor="White"
                    FontSize="14"
                    Padding="12,8"
                    CornerRadius="12"
                    VerticalOptions="Center"/>
        </Grid>
        </Border>

        <!-- Today's Date Display -->
        <Border Grid.Row="2"
                Margin="12,8"
                Padding="16,12"
                Background="{DynamicResource TodayGreen}"
                StrokeThickness="0">
            <Border.Shadow>
                <Shadow Brush="{DynamicResource TodayGreen}"
                        Opacity="0.3"
                        Radius="12"
                        Offset="0,4"/>
            </Border.Shadow>
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16"/>
            </Border.StrokeShape>
            <Label HorizontalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Today: "
                              FontSize="16"
                              FontAttributes="Bold"
                              TextColor="White"/>
                        <Span Text="{Binding TodayGregorianDisplay}"
                              FontSize="16"
                              FontAttributes="Bold"
                              TextColor="White"/>
                        <Span Text=" • "
                              FontSize="16"
                              TextColor="White"/>
                        <Span Text="{Binding TodayLunarDisplay}"
                              FontSize="16"
                              FontAttributes="Bold"
                              TextColor="White"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </Border>

        <!-- Day of Week Header -->
        <Grid Grid.Row="3"
              BackgroundColor="Transparent"
              Padding="12,8,12,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Text="Sun" HorizontalOptions="Center" FontSize="13" FontAttributes="Bold" TextColor="{DynamicResource Primary}"/>
            <Label Grid.Column="1" Text="Mon" HorizontalOptions="Center" FontSize="13" FontAttributes="Bold" TextColor="{DynamicResource Primary}"/>
            <Label Grid.Column="2" Text="Tue" HorizontalOptions="Center" FontSize="13" FontAttributes="Bold" TextColor="{DynamicResource Primary}"/>
            <Label Grid.Column="3" Text="Wed" HorizontalOptions="Center" FontSize="13" FontAttributes="Bold" TextColor="{DynamicResource Primary}"/>
            <Label Grid.Column="4" Text="Thu" HorizontalOptions="Center" FontSize="13" FontAttributes="Bold" TextColor="{DynamicResource Primary}"/>
            <Label Grid.Column="5" Text="Fri" HorizontalOptions="Center" FontSize="13" FontAttributes="Bold" TextColor="{DynamicResource Primary}"/>
            <Label Grid.Column="6" Text="Sat" HorizontalOptions="Center" FontSize="13" FontAttributes="Bold" TextColor="{DynamicResource Primary}"/>
        </Grid>

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.Row="5"
                          IsVisible="{Binding IsBusy}"
                          IsRunning="{Binding IsBusy}"
                          Color="{DynamicResource Primary}"
                          VerticalOptions="Center"
                          HorizontalOptions="Center"/>

        <!-- Calendar Grid -->
        <CollectionView Grid.Row="5"
                       ItemsSource="{Binding CalendarDays}"
                       IsVisible="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}"
                       SelectionMode="None"
                       HeightRequest="{Binding CalendarHeight}"
                       VerticalOptions="Start"
                       Margin="12,0">
            <CollectionView.GestureRecognizers>
                <SwipeGestureRecognizer Direction="Left" Command="{Binding NextMonthCommand}"/>
                <SwipeGestureRecognizer Direction="Right" Command="{Binding PreviousMonthCommand}"/>
            </CollectionView.GestureRecognizers>
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical"
                               Span="7"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="4"
                           Margin="3"
                           Background="White"
                           StrokeThickness="0">
                        <Border.Shadow>
                            <Shadow Brush="Black"
                                    Opacity="0.08"
                                    Radius="6"
                                    Offset="0,2"/>
                        </Border.Shadow>
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12"/>
                        </Border.StrokeShape>
                        <Border.Triggers>
                            <DataTrigger TargetType="Border"
                                       Binding="{Binding IsToday}"
                                       Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryGradient}"/>
                                <Setter Property="Shadow">
                                    <Shadow Brush="{DynamicResource Primary}"
                                            Opacity="0.3"
                                            Radius="10"
                                            Offset="0,3"/>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger TargetType="Border"
                                       Binding="{Binding HasHoliday}"
                                       Value="True">
                                <Setter Property="Stroke" Value="{Binding HolidayColor}"/>
                                <Setter Property="StrokeThickness" Value="2"/>
                            </DataTrigger>
                        </Border.Triggers>

                        <VerticalStackLayout Spacing="2"
                                           Padding="2">
                            <!-- Gregorian Day -->
                            <Label Text="{Binding Day}"
                                  FontSize="16"
                                  FontAttributes="Bold"
                                  TextColor="{DynamicResource Gray900}"
                                  HorizontalOptions="Center">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label"
                                               Binding="{Binding IsCurrentMonth}"
                                               Value="False">
                                        <Setter Property="TextColor" Value="{DynamicResource Gray300}"/>
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label"
                                               Binding="{Binding IsToday}"
                                               Value="True">
                                        <Setter Property="TextColor" Value="White"/>
                                        <Setter Property="FontSize" Value="18"/>
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>

                            <!-- Lunar Day -->
                            <Label Text="{Binding LunarDateDisplay}"
                                  FontSize="10"
                                  TextColor="{DynamicResource LunarRed}"
                                  HorizontalOptions="Center"
                                  LineBreakMode="NoWrap"
                                  IsVisible="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:CalendarViewModel}}, Path=ShowLunarDates}">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label"
                                               Binding="{Binding IsCurrentMonth}"
                                               Value="False">
                                        <Setter Property="TextColor" Value="{DynamicResource Gray300}"/>
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label"
                                               Binding="{Binding IsToday}"
                                               Value="True">
                                        <Setter Property="TextColor" Value="White"/>
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label"
                                               Binding="{Binding LunarDateDisplay}"
                                               Value="">
                                        <Setter Property="IsVisible" Value="False"/>
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>

                            <!-- Holiday Name (if exists) -->
                            <Label Text="{Binding Holiday.Name}"
                                  FontSize="8"
                                  FontAttributes="Bold"
                                  TextColor="{Binding HolidayColor}"
                                  HorizontalOptions="Center"
                                  LineBreakMode="WordWrap"
                                  MaxLines="2"
                                  IsVisible="{Binding HasHoliday}">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label"
                                               Binding="{Binding IsToday}"
                                               Value="True">
                                        <Setter Property="TextColor" Value="White"/>
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Upcoming Holidays Section -->
        <VerticalStackLayout Grid.Row="6"
                            BackgroundColor="Transparent"
                            Padding="16,12">

            <!-- Section Header -->
            <Label Text="{Binding UpcomingHolidaysDays, StringFormat='Upcoming Holidays (Next {0} Days)'}"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="{DynamicResource Primary}"
                   Margin="0,8,0,12"/>

            <!-- No Upcoming Holidays Message -->
            <Label Text="No upcoming holidays in this period"
                   FontSize="14"
                   TextColor="{DynamicResource Gray600}"
                   HorizontalOptions="Center"
                   Margin="0,20,0,20"
                   IsVisible="{Binding UpcomingHolidays.Count, Converter={StaticResource IntToBoolConverter}, ConverterParameter=inverse}"/>

            <!-- Upcoming Holidays List -->
            <CollectionView ItemsSource="{Binding UpcomingHolidays}"
                           IsVisible="{Binding UpcomingHolidays.Count, Converter={StaticResource IntToBoolConverter}}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="16"
                               Margin="0,6"
                               Background="{DynamicResource CardGradient}"
                               StrokeThickness="0">
                            <Border.Shadow>
                                <Shadow Brush="Black"
                                        Opacity="0.1"
                                        Radius="10"
                                        Offset="0,4"/>
                            </Border.Shadow>
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="16"/>
                            </Border.StrokeShape>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:CalendarViewModel}}, Path=ViewHolidayDetailCommand}"
                                                     CommandParameter="{Binding .}"/>
                            </Border.GestureRecognizers>

                            <Grid ColumnDefinitions="Auto,*"
                                 ColumnSpacing="12">

                                <!-- Date Box - Elegant Soft Gradient Design -->
                                <Border Grid.Column="0"
                                       Padding="12,14"
                                       StrokeThickness="0"
                                       WidthRequest="70">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="{Binding ColorHex}" Offset="0.0"/>
                                            <GradientStop Color="{Binding ColorHex}" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border.Shadow>
                                        <Shadow Brush="{Binding ColorHex}"
                                                Opacity="0.25"
                                                Radius="12"
                                                Offset="0,4"/>
                                    </Border.Shadow>
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="14"/>
                                    </Border.StrokeShape>
                                    <VerticalStackLayout HorizontalOptions="Center" Spacing="0">
                                        <Label Text="{Binding GregorianDate, StringFormat='{0:MMM}'}"
                                              FontSize="10"
                                              TextColor="White"
                                              Opacity="0.95"
                                              FontAttributes="Bold"
                                              HorizontalOptions="Center"
                                              Margin="0,0,0,2"/>
                                        <Label Text="{Binding GregorianDate, StringFormat='{0:dd}'}"
                                              FontSize="26"
                                              FontAttributes="Bold"
                                              TextColor="White"
                                              HorizontalOptions="Center"
                                              Margin="0,0,0,2"/>
                                        <Label Text="{Binding GregorianDate, StringFormat='{0:yyyy}'}"
                                              FontSize="9"
                                              TextColor="White"
                                              Opacity="0.85"
                                              HorizontalOptions="Center"/>
                                    </VerticalStackLayout>
                                </Border>

                                <!-- Holiday Info -->
                                <VerticalStackLayout Grid.Column="1"
                                                    Spacing="4"
                                                    VerticalOptions="Center">
                                    <Label Text="{Binding HolidayName}"
                                          FontSize="16"
                                          FontAttributes="Bold"
                                          TextColor="{DynamicResource Gray900}"/>

                                    <Label Text="{Binding GregorianDateFormatted}"
                                          FontSize="12"
                                          TextColor="{DynamicResource Gray600}"/>

                                    <!-- Lunar date display -->
                                    <Label Text="{Binding LunarDateDisplay}"
                                          FontSize="14"
                                          TextColor="{DynamicResource LunarRed}"
                                          FontAttributes="Bold"
                                          Margin="0,4,0,0"
                                          IsVisible="{Binding HasLunarDate}"/>

                                    <Label Text="{Binding HolidayDescription}"
                                          FontSize="11"
                                          TextColor="{DynamicResource Gray500}"
                                          LineBreakMode="WordWrap"/>
                                </VerticalStackLayout>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>

        <!-- Year Holidays Section -->
        <Border Grid.Row="7"
                Margin="12,8"
                StrokeThickness="0"
                Background="{DynamicResource CardGradient}">
            <Border.Shadow>
                <Shadow Brush="Black"
                        Opacity="0.1"
                        Radius="12"
                        Offset="0,4"/>
            </Border.Shadow>
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16"/>
            </Border.StrokeShape>
        <VerticalStackLayout Padding="0">

            <!-- Section Header (Always visible - Toggle) -->
            <Grid Padding="16,16"
                  Background="{DynamicResource PrimaryGradientVertical}">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ToggleYearSectionCommand}"/>
                </Grid.GestureRecognizers>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0"
                       Text="Vietnamese Holidays"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="White"
                       VerticalOptions="Center"/>

                <Label Grid.Column="1"
                       Text="{Binding IsYearSectionExpanded, Converter={StaticResource BoolToExpandIconConverter}}"
                       FontSize="20"
                       TextColor="White"
                       VerticalOptions="Center"/>
            </Grid>

            <!-- Year Navigation and List (Collapsible) -->
            <VerticalStackLayout IsVisible="{Binding IsYearSectionExpanded}"
                                Padding="16">

                <!-- Year Navigation -->
                <Grid ColumnDefinitions="Auto,*,Auto,Auto"
                      ColumnSpacing="8"
                      Margin="0,0,0,12">

                    <Button Grid.Column="0"
                            Text="◀"
                            Command="{Binding PreviousYearCommand}"
                            BackgroundColor="{DynamicResource Primary}"
                            TextColor="White"
                            FontSize="18"
                            WidthRequest="50"
                            HeightRequest="40"/>

                    <Picker Grid.Column="1"
                            ItemsSource="{Binding AvailableYears}"
                            SelectedItem="{Binding SelectedYear}"
                            SelectedIndexChanged="OnYearPickerSelectedIndexChanged"
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="{DynamicResource Primary}"
                            HorizontalOptions="Fill"
                            VerticalOptions="Center"/>

                    <Button Grid.Column="2"
                            Text="Today"
                            Command="{Binding CurrentYearCommand}"
                            BackgroundColor="{DynamicResource Primary}"
                            TextColor="White"
                            FontSize="14"
                            Padding="12,0"
                            HeightRequest="40"/>

                    <Button Grid.Column="3"
                            Text="▶"
                            Command="{Binding NextYearCommand}"
                            BackgroundColor="{DynamicResource Primary}"
                            TextColor="White"
                            FontSize="18"
                            WidthRequest="50"
                            HeightRequest="40"/>
                </Grid>

                <!-- Holidays List -->
                <CollectionView ItemsSource="{Binding YearHolidays}"
                               MaximumHeightRequest="400">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="14"
                                   Margin="0,6"
                                   BackgroundColor="White"
                                   StrokeThickness="0">
                                <Border.Shadow>
                                    <Shadow Brush="Black"
                                            Opacity="0.08"
                                            Radius="8"
                                            Offset="0,2"/>
                                </Border.Shadow>
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="12"/>
                                </Border.StrokeShape>
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:CalendarViewModel}}, Path=ViewHolidayDetailCommand}"
                                                         CommandParameter="{Binding .}"/>
                                </Border.GestureRecognizers>

                                <Grid ColumnDefinitions="Auto,*"
                                     ColumnSpacing="12">

                                    <!-- Date Box - Elegant Soft Gradient Design -->
                                    <Border Grid.Column="0"
                                           Padding="12,14"
                                           StrokeThickness="0"
                                           WidthRequest="70">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Color="{Binding ColorHex}" Offset="0.0"/>
                                                <GradientStop Color="{Binding ColorHex}" Offset="1.0"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Border.Shadow>
                                            <Shadow Brush="{Binding ColorHex}"
                                                    Opacity="0.25"
                                                    Radius="12"
                                                    Offset="0,4"/>
                                        </Border.Shadow>
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="14"/>
                                        </Border.StrokeShape>
                                        <VerticalStackLayout HorizontalOptions="Center" Spacing="0">
                                            <Label Text="{Binding GregorianDate, StringFormat='{0:MMM}'}"
                                                  FontSize="10"
                                                  TextColor="White"
                                                  Opacity="0.95"
                                                  FontAttributes="Bold"
                                                  HorizontalOptions="Center"
                                                  Margin="0,0,0,2"/>
                                            <Label Text="{Binding GregorianDate, StringFormat='{0:dd}'}"
                                                  FontSize="26"
                                                  FontAttributes="Bold"
                                                  TextColor="White"
                                                  HorizontalOptions="Center"
                                                  Margin="0,0,0,2"/>
                                            <Label Text="{Binding GregorianDate, StringFormat='{0:yyyy}'}"
                                                  FontSize="9"
                                                  TextColor="White"
                                                  Opacity="0.85"
                                                  HorizontalOptions="Center"/>
                                        </VerticalStackLayout>
                                    </Border>

                                    <!-- Holiday Info -->
                                    <VerticalStackLayout Grid.Column="1"
                                                        Spacing="4"
                                                        VerticalOptions="Center">
                                        <Label Text="{Binding HolidayName}"
                                              FontSize="16"
                                              FontAttributes="Bold"
                                              TextColor="{DynamicResource Gray900}"/>

                                        <Label Text="{Binding GregorianDateFormatted}"
                                              FontSize="12"
                                              TextColor="{DynamicResource Gray600}"/>

                                        <!-- Lunar date display -->
                                        <Label Text="{Binding LunarDateDisplay}"
                                              FontSize="14"
                                              TextColor="{DynamicResource LunarRed}"
                                              FontAttributes="Bold"
                                              Margin="0,4,0,0"
                                              IsVisible="{Binding HasLunarDate}"/>

                                        <Label Text="{Binding HolidayDescription}"
                                              FontSize="11"
                                              TextColor="{DynamicResource Gray500}"
                                              LineBreakMode="WordWrap"/>
                                    </VerticalStackLayout>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </VerticalStackLayout>
        </Border>

            </Grid>
        </ScrollView>
    </RefreshView>
</ContentPage>
