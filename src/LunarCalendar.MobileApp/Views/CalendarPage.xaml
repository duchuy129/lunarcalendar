<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewmodels="clr-namespace:LunarCalendar.MobileApp.ViewModels"
             xmlns:converters="clr-namespace:LunarCalendar.MobileApp.Converters"
             xmlns:ext="clr-namespace:LunarCalendar.MobileApp.Extensions"
             x:Class="LunarCalendar.MobileApp.Views.CalendarPage"
             Title="{Binding Title}"
             Background="{DynamicResource BackgroundGradient}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BoolToExpandIconConverter x:Key="BoolToExpandIconConverter"/>
            <converters:IntToBoolConverter x:Key="IntToBoolConverter"/>
            <converters:MonthIndexConverter x:Key="MonthIndexConverter"/>
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter"/>
            <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <RefreshView Grid.Row="0" Grid.RowSpan="6"
                 IsRefreshing="{Binding IsRefreshing}"
                 Command="{Binding RefreshCommand}"
                 RefreshColor="{DynamicResource Primary}">
        <ScrollView>
            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto"
                  RowSpacing="0"
                  BackgroundColor="Transparent">

            <!-- Cultural Background Image - Toggle via settings -->
        <Image Grid.RowSpan="6"
               Source="lunar_bg.png"
               Aspect="AspectFill"
               Opacity="0.25"
               IsVisible="{Binding ShowCulturalBackground}"
               HorizontalOptions="Fill"
               VerticalOptions="Fill"/>

        <!-- Month Navigation Header - Fixed height to prevent layout shift -->
        <Grid Grid.Row="0"
              Background="{DynamicResource PrimaryGradient}"
              HeightRequest="60">
            <Grid.Shadow>
                <Shadow Brush="{DynamicResource Primary}"
                        Opacity="0.2"
                        Radius="6"
                        Offset="0,2"/>
            </Grid.Shadow>
            <Grid.Padding>
                <OnPlatform x:TypeArguments="Thickness">
                    <On Platform="iOS" Value="12,6" />
                    <On Platform="Android" Value="12,6" />
                </OnPlatform>
            </Grid.Padding>
            <Grid.RowDefinitions>
                <RowDefinition Height="44"/>
                <RowDefinition Height="16"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0" Grid.Column="0"
                    BackgroundColor="#40FFFFFF"
                    StrokeThickness="0"
                    Padding="0"
                    WidthRequest="44"
                    HeightRequest="44">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="22"/>
                </Border.StrokeShape>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding PreviousMonthCommand}"/>
                </Border.GestureRecognizers>
                <Label Text="â€¹"
                       FontSize="32"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       SemanticProperties.Description="Previous month"
                       SemanticProperties.Hint="Navigate to the previous month in the calendar"/>
            </Border>

            <StackLayout Grid.Row="0" Grid.Column="1"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        Padding="0"
                        Spacing="2">
                <Button Text="{Binding MonthYearDisplay}"
                        Command="{Binding ShowMonthYearPickerCommand}"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        FontSize="18"
                        FontAttributes="Bold"
                        Padding="12,6"
                        HeightRequest="36"
                        HorizontalOptions="Center"
                        SemanticProperties.Description="Current month and year - tap to change"
                        SemanticProperties.Hint="Tap to select a different month and year"/>

                <!-- Online/Offline Status -->
                <Label Text="{Binding SyncStatus}"
                       FontSize="10"
                       TextColor="White"
                       Opacity="0.8"
                       HorizontalOptions="Center"
                       HeightRequest="12"
                       IsVisible="{Binding SyncStatus, Converter={StaticResource IntToBoolConverter}}"
                       SemanticProperties.Description="Sync status"/>
            </StackLayout>

            <Border Grid.Row="0" Grid.Column="2"
                    BackgroundColor="#40FFFFFF"
                    StrokeThickness="0"
                    Padding="16,8"
                    Margin="0,0,8,0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20"/>
                </Border.StrokeShape>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding TodayCommand}"/>
                </Border.GestureRecognizers>
                <Label Text="{ext:Translate Today}"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       SemanticProperties.Description="Go to today"
                       SemanticProperties.Hint="Navigate to the current month and highlight today's date"/>
            </Border>

            <Border Grid.Row="0" Grid.Column="3"
                    BackgroundColor="#40FFFFFF"
                    StrokeThickness="0"
                    Padding="0"
                    WidthRequest="44"
                    HeightRequest="44">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="22"/>
                </Border.StrokeShape>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NextMonthCommand}"/>
                </Border.GestureRecognizers>
                <Label Text="â€º"
                       FontSize="32"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       SemanticProperties.Description="Next month"
                       SemanticProperties.Hint="Navigate to the next month in the calendar"/>
            </Border>

            <!-- Sync Indicator -->
            <ActivityIndicator Grid.Row="1" Grid.ColumnSpan="4"
                             IsRunning="{Binding IsSyncing}"
                             IsVisible="{Binding IsSyncing}"
                             Color="White"
                             HeightRequest="20"
                             Margin="0,4,0,0"/>
        </Grid>

        <!-- Today's Date Display - Fixed height to prevent layout shift -->
        <Border Grid.Row="1"
                Margin="12,4,12,4"
                Background="{DynamicResource TodayGreen}"
                StrokeThickness="0"
                HeightRequest="76">
            <Border.Padding>
                <OnPlatform x:TypeArguments="Thickness">
                    <On Platform="iOS" Value="16,10" />
                    <On Platform="Android" Value="16,10" />
                </OnPlatform>
            </Border.Padding>
            <Border.Shadow>
                <Shadow Brush="{DynamicResource TodayGreen}"
                        Opacity="0.4"
                        Radius="16"
                        Offset="0,6"/>
            </Border.Shadow>
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="18"/>
            </Border.StrokeShape>
            <VerticalStackLayout HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 Spacing="4">
                <!-- Today + Lunar Date -->
                <Label HorizontalOptions="Center">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="{ext:Translate TodayLabel}"
                                  FontSize="19"
                                  FontAttributes="Bold"
                                  TextColor="White"/>
                            <Span Text="{Binding TodayLunarDisplay}"
                                  FontSize="19"
                                  FontAttributes="Bold"
                                  TextColor="White"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                
                <!-- Stem-Branch (Can Chi) with Element Indicator -->
                <HorizontalStackLayout HorizontalOptions="Center" 
                                       Spacing="6">
                    <!-- Five Element Color Indicator -->
                    <Ellipse WidthRequest="10"
                             HeightRequest="10"
                             Fill="{Binding TodayElementColor}"
                             VerticalOptions="Center"/>
                    
                    <!-- Stem-Branch Text (Can Chi / å¹²æ”¯) -->
                    <Label Text="{Binding TodayStemBranch}"
                           FontSize="14"
                           FontAttributes="None"
                           TextColor="#F0FFFFFF"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Border>

        <!-- Day of Week Header - Fixed height for consistency -->
        <Grid Grid.Row="2"
              BackgroundColor="Transparent"
              Padding="12,4,12,4"
              HeightRequest="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Text="{ext:Translate Sunday}" HorizontalOptions="Center" FontSize="13" FontAttributes="Bold" TextColor="{DynamicResource Primary}"/>
            <Label Grid.Column="1" Text="{ext:Translate Monday}" HorizontalOptions="Center" FontSize="13" FontAttributes="Bold" TextColor="{DynamicResource Primary}"/>
            <Label Grid.Column="2" Text="{ext:Translate Tuesday}" HorizontalOptions="Center" FontSize="13" FontAttributes="Bold" TextColor="{DynamicResource Primary}"/>
            <Label Grid.Column="3" Text="{ext:Translate Wednesday}" HorizontalOptions="Center" FontSize="13" FontAttributes="Bold" TextColor="{DynamicResource Primary}"/>
            <Label Grid.Column="4" Text="{ext:Translate Thursday}" HorizontalOptions="Center" FontSize="13" FontAttributes="Bold" TextColor="{DynamicResource Primary}"/>
            <Label Grid.Column="5" Text="{ext:Translate Friday}" HorizontalOptions="Center" FontSize="13" FontAttributes="Bold" TextColor="{DynamicResource Primary}"/>
            <Label Grid.Column="6" Text="{ext:Translate Saturday}" HorizontalOptions="Center" FontSize="13" FontAttributes="Bold" TextColor="{DynamicResource Primary}"/>
        </Grid>

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.Row="3"
                          IsVisible="{Binding IsBusy}"
                          IsRunning="{Binding IsBusy}"
                          Color="{DynamicResource Primary}"
                          VerticalOptions="Center"
                          HorizontalOptions="Center"/>

        <!-- Calendar Grid - Fixed height to prevent navigation bar and Today box from shifting -->
        <CollectionView Grid.Row="3"
                       ItemsSource="{Binding CalendarDays}"
                       IsVisible="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}"
                       SelectionMode="None"
                       HeightRequest="444"
                       VerticalOptions="Start"
                       Margin="12,0,12,4">
            <CollectionView.GestureRecognizers>
                <SwipeGestureRecognizer Direction="Left" Command="{Binding NextMonthCommand}"/>
                <SwipeGestureRecognizer Direction="Right" Command="{Binding PreviousMonthCommand}"/>
            </CollectionView.GestureRecognizers>
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical"
                               Span="7"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <!-- Glass-morphism calendar cells - semi-transparent to blend with background -->
                    <Border Padding="5"
                           Margin="2"
                           Background="#CCFFFFFF"
                           StrokeThickness="0"
                           HeightRequest="70">
                        <!-- Add tap gesture recognizer for navigation -->
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:CalendarViewModel}}, Path=SelectDateCommand}"
                                CommandParameter="{Binding .}"/>
                        </Border.GestureRecognizers>
                        <!-- Subtle shadow for depth -->
                        <Border.Shadow>
                            <Shadow Brush="Black"
                                    Opacity="0.03"
                                    Radius="4"
                                    Offset="0,2"/>
                        </Border.Shadow>
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <Border.Triggers>
                            <!-- HasHoliday trigger - Semi-transparent for blending -->
                            <DataTrigger TargetType="Border"
                                       Binding="{Binding HasHoliday}"
                                       Value="True">
                                <Setter Property="Background" Value="#E6FFFFFF"/><!-- 90% white -->
                                <Setter Property="Stroke" Value="{Binding HolidayColor}"/>
                                <Setter Property="StrokeThickness" Value="2"/>
                                <Setter Property="Shadow">
                                    <Shadow Brush="Black"
                                            Opacity="0.05"
                                            Radius="5"
                                            Offset="0,2"/>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger TargetType="Border"
                                       Binding="{Binding IsLunarSpecialDay}"
                                       Value="True">
                                <!-- Semi-transparent special day background -->
                                <Setter Property="Background" Value="#CCF0F7FB"/><!-- 80% light blue -->
                            </DataTrigger>
                            <!-- IsToday trigger - Warm orange solid color -->
                            <DataTrigger TargetType="Border"
                                       Binding="{Binding IsToday}"
                                       Value="True">
                                <!-- REMOVED: Inline LinearGradientBrush (causes iOS Release crashes)
                                     REASON: Dynamic gradient in DataTrigger fails in AOT mode
                                     FIX: Use solid color #CCFF9966 (blend of light/deep orange) -->
                                <Setter Property="Background" Value="#CCFF9966"/><!-- 80% medium orange -->
                                <Setter Property="Stroke" Value="#99FF6B35"/><!-- 60% orange stroke -->
                                <Setter Property="StrokeThickness" Value="2"/>
                                <Setter Property="Shadow">
                                    <Shadow Brush="#FF8C42"
                                            Opacity="0.3"
                                            Radius="8"
                                            Offset="0,2"/>
                                </Setter>
                            </DataTrigger>
                        </Border.Triggers>

                        <VerticalStackLayout Spacing="2"
                                           Padding="2"
                                           VerticalOptions="Center">
                            <!-- Gregorian Day -->
                            <Label Text="{Binding Day}"
                                  FontSize="16"
                                  FontAttributes="Bold"
                                  TextColor="{DynamicResource Gray900}"
                                  HorizontalOptions="Center"
                                  VerticalOptions="Start">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label"
                                               Binding="{Binding IsCurrentMonth}"
                                               Value="False">
                                        <Setter Property="TextColor" Value="{DynamicResource Gray300}"/>
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label"
                                               Binding="{Binding IsToday}"
                                               Value="True">
                                        <Setter Property="TextColor" Value="White"/>
                                        <Setter Property="FontSize" Value="18"/>
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>

                            <!-- Lunar Day -->
                            <Label Text="{Binding LunarDateDisplay}"
                                  FontSize="10"
                                  TextColor="{DynamicResource LunarRed}"
                                  HorizontalOptions="Center"
                                  LineBreakMode="NoWrap"
                                  MinimumHeightRequest="14"
                                  HeightRequest="14"
                                  VerticalOptions="Start"
                                  IsVisible="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:CalendarViewModel}}, Path=ShowLunarDates}">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label"
                                               Binding="{Binding IsCurrentMonth}"
                                               Value="False">
                                        <Setter Property="TextColor" Value="{DynamicResource Gray300}"/>
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label"
                                               Binding="{Binding IsToday}"
                                               Value="True">
                                        <Setter Property="TextColor" Value="White"/>
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label"
                                               Binding="{Binding LunarDateDisplay}"
                                               Value="">
                                        <Setter Property="Opacity" Value="0"/>
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>

                            <!-- Holiday Name (if exists) -->
                            <Label Text="{Binding HolidayName}"
                                  FontSize="8"
                                  FontAttributes="Bold"
                                  TextColor="{Binding HolidayColor}"
                                  HorizontalOptions="Center"
                                  LineBreakMode="TailTruncation"
                                  MaxLines="1"
                                  HeightRequest="12"
                                  VerticalOptions="Start"
                                  IsVisible="{Binding HasHoliday}">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label"
                                               Binding="{Binding IsToday}"
                                               Value="True">
                                        <Setter Property="TextColor" Value="White"/>
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Upcoming Holidays Section -->
        <VerticalStackLayout Grid.Row="4"
                            BackgroundColor="Transparent"
                            Padding="16,8">

            <!-- Section Header with Icon -->
            <HorizontalStackLayout Spacing="8" 
                                  Margin="0,8,0,12">
                <Label Text="ðŸŽ‰"
                       FontSize="20"
                       VerticalOptions="Center"/>
                <Label Text="{Binding UpcomingHolidaysTitle}"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="{DynamicResource Primary}"
                       VerticalOptions="Center"/>
            </HorizontalStackLayout>

            <!-- No Upcoming Holidays Message -->
            <Label Text="{ext:Translate NoUpcomingHolidaysMessage}"
                   FontSize="14"
                   TextColor="{DynamicResource Gray600}"
                   HorizontalOptions="Center"
                   Margin="0,20,0,20"
                   IsVisible="{Binding UpcomingHolidays.Count, Converter={StaticResource IntToBoolConverter}, ConverterParameter=inverse}"/>

            <!-- Loading Indicator -->
            <ActivityIndicator IsRunning="{Binding IsLoadingHolidays}"
                              IsVisible="{Binding IsLoadingHolidays}"
                              Color="{DynamicResource Primary}"
                              HeightRequest="50"
                              Margin="0,20,0,20"/>

            <!-- Upcoming Holidays List - Using BindableLayout for better ScrollView compatibility -->
            <VerticalStackLayout BindableLayout.ItemsSource="{Binding UpcomingHolidays}"
                                Spacing="8"
                                IsVisible="{Binding IsLoadingHolidays, Converter={StaticResource InvertedBoolConverter}}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="16"
                               Margin="0,6"
                               Background="{DynamicResource CardGradient}"
                               StrokeThickness="0">
                            <Border.Shadow>
                                <Shadow Brush="Black"
                                        Opacity="0.1"
                                        Radius="10"
                                        Offset="0,4"/>
                            </Border.Shadow>
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="16"/>
                            </Border.StrokeShape>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ViewHolidayDetailCommand}"
                                                     CommandParameter="{Binding .}"/>
                            </Border.GestureRecognizers>

                            <Grid ColumnDefinitions="Auto,*"
                                 ColumnSpacing="12">

                                <!-- Date Box - Solid color (AOT-safe) -->
                                <Border Grid.Column="0"
                                       Padding="12,14"
                                       StrokeThickness="0"
                                       WidthRequest="70"
                                       BackgroundColor="{Binding BackgroundColor}">
                                    <!-- Using BackgroundColor with Color object - 100% AOT-safe -->
                                    <Border.Shadow>
                                        <Shadow Brush="{Binding BackgroundBrush}"
                                                Opacity="0.25"
                                                Radius="12"
                                                Offset="0,4"/>
                                    </Border.Shadow>
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="14"/>
                                    </Border.StrokeShape>
                                    <VerticalStackLayout HorizontalOptions="Center" Spacing="0">
                                        <Label Text="{Binding GregorianDate, StringFormat='{0:MMM}'}"
                                              FontSize="10"
                                              TextColor="White"
                                              Opacity="0.95"
                                              FontAttributes="Bold"
                                              HorizontalOptions="Center"
                                              Margin="0,0,0,2"/>
                                        <Label Text="{Binding GregorianDate, StringFormat='{0:dd}'}"
                                              FontSize="26"
                                              FontAttributes="Bold"
                                              TextColor="White"
                                              HorizontalOptions="Center"
                                              Margin="0,0,0,2"/>
                                        <Label Text="{Binding GregorianDate, StringFormat='{0:yyyy}'}"
                                              FontSize="9"
                                              TextColor="White"
                                              Opacity="0.85"
                                              HorizontalOptions="Center"/>
                                    </VerticalStackLayout>
                                </Border>

                                <!-- Holiday Info -->
                                <VerticalStackLayout Grid.Column="1"
                                                    Spacing="4"
                                                    VerticalOptions="Center">
                                    <Label Text="{Binding HolidayName}"
                                          FontSize="16"
                                          FontAttributes="Bold"
                                          TextColor="{DynamicResource Gray900}"/>

                                    <Label Text="{Binding GregorianDateFormatted}"
                                          FontSize="12"
                                          TextColor="{DynamicResource Gray600}"/>

                                    <!-- Lunar date display -->
                                    <Label Text="{Binding LunarDateDisplay}"
                                          FontSize="14"
                                          TextColor="{DynamicResource LunarRed}"
                                          FontAttributes="Bold"
                                          Margin="0,4,0,0"
                                          IsVisible="{Binding HasLunarDate}"/>

                                    <!-- Day Stem-Branch display -->
                                    <Label Text="{Binding DayStemBranchFormatted}"
                                          FontSize="12"
                                          TextColor="{DynamicResource Gray700}"
                                          FontAttributes="Italic"
                                          Margin="0,2,0,0"
                                          IsVisible="{Binding HasLunarDate}"/>

                                    <Label Text="{Binding HolidayDescription}"
                                          FontSize="11"
                                          TextColor="{DynamicResource Gray500}"
                                          LineBreakMode="WordWrap"/>
                                </VerticalStackLayout>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </VerticalStackLayout>
        </VerticalStackLayout>

            </Grid>
        </ScrollView>
    </RefreshView>
</ContentPage>
