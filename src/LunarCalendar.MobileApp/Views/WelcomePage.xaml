<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:LunarCalendar.MobileApp.ViewModels"
             x:Class="LunarCalendar.MobileApp.Views.WelcomePage"
             x:DataType="viewmodels:WelcomeViewModel"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <Grid RowDefinitions="*,Auto,Auto,Auto,Auto,*"
          Padding="30">

        <!-- Logo/Icon Area -->
        <VerticalStackLayout Grid.Row="0"
                           VerticalOptions="Center"
                           HorizontalOptions="Center">
            <Label Text="ðŸŒ™"
                   FontSize="80"
                   HorizontalOptions="Center"/>
            <Label Text="Lunar Calendar"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,20,0,0"/>
            <Label Text="Track events across calendars"
                   FontSize="16"
                   TextColor="{DynamicResource Gray600}"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0"/>
        </VerticalStackLayout>

        <!-- Continue as Guest Button -->
        <Button Grid.Row="1"
                Text="Continue as Guest"
                Command="{Binding ContinueAsGuestCommand}"
                BackgroundColor="{DynamicResource Primary}"
                TextColor="White"
                FontSize="16"
                FontAttributes="Bold"
                HeightRequest="50"
                CornerRadius="25"
                Margin="0,20,0,0"/>

        <!-- Sign In Button -->
        <Button Grid.Row="2"
                Text="Sign In"
                Command="{Binding NavigateToSignInCommand}"
                BackgroundColor="Transparent"
                TextColor="{DynamicResource Primary}"
                BorderColor="{DynamicResource Primary}"
                BorderWidth="2"
                FontSize="16"
                FontAttributes="Bold"
                HeightRequest="50"
                CornerRadius="25"
                Margin="0,15,0,0"/>

        <!-- Sign Up Button -->
        <Button Grid.Row="3"
                Text="Sign Up"
                Command="{Binding NavigateToSignUpCommand}"
                BackgroundColor="Transparent"
                TextColor="{DynamicResource Primary}"
                FontSize="16"
                HeightRequest="50"
                Margin="0,10,0,0"/>

        <!-- Info Text -->
        <Label Grid.Row="4"
               Text="Guest mode lets you view the calendar.&#x0a;Sign up to create and sync events."
               FontSize="12"
               TextColor="{DynamicResource Gray600}"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center"
               Margin="0,30,0,0"/>

    </Grid>
</ContentPage>
