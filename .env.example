# Environment Variables Template for LunarCalendar API
# Copy this file to .env and fill in your production values
# NEVER commit .env to version control!

# Database Configuration (Only needed if you add database in Sprint 9+)
CONNECTION_STRING=Host=your-db-host;Database=lunarcalendar;Username=your-user;Password=your-password
DB_PASSWORD=your-secure-database-password

# JWT Authentication
# IMPORTANT: Generate a strong secret key (min 32 characters) for production
# You can generate one using: openssl rand -base64 32
JWT_SECRET_KEY=your-production-secret-key-min-32-characters-here

# Application Settings
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:8080
ALLOWED_HOSTS=*

# DigitalOcean Specific (Optional)
# DO_APP_NAME=lunarcalendar-api
# DO_REGION=nyc3

# For local Docker testing, you can use these defaults:
# CONNECTION_STRING=Host=db;Database=lunarcalendar;Username=postgres;Password=postgres
# DB_PASSWORD=postgres
# JWT_SECRET_KEY=local-testing-secret-key-min-32-characters-do-not-use-in-production
